{
  "compilerOptions": {
    "sourceMap": false,
    "target": "es2016",
    "useDefineForClassFields": false,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "skipLibCheck": true,
    "jsx": "react",
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules",
    "dist"
  ]
}